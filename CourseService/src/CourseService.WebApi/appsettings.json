{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Fatal",
        "System": "Fatal"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  },
  "AllowedHosts": "*",

  "Jwt": {
    "Issuer": "UserService",
    "Audience": "CourseServiceClients",
    "Key": "super-secret-key-course-user-demo"
  },
  "UserService": { "BaseUrl": "http://userservice:5000" }
}